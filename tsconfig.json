{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "lib": ["DOM", "es2022"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "types",
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@utils": ["src/utils/index.ts"],
      "@utils/*": ["src/utils/*"],
      "@core/*": ["src/core/*"],
      "@static/*": ["src/static/*"]
    }
  },
  "include": ["src/**/*"]
}
